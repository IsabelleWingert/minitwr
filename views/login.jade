extends layout 
block content
	img#logo(src="images/logo.png", alt="Logo du site")
	
	#menumessage.mm
		h1= title
		p Bienvenue #{pseudo}

		form(action='/login', method='POST')
			p Votre message :
			
			textarea(name="tweet")
			input(type='submit', content='Sends', value='Envoyer')



	#dernierstweets.dt
		p Messages :
		ul 
			- each tweet, index in tweets
				if (index % 2 == 0)
					li(class=date)= tweet
				else 
					ul
						li(class=tw)=tweet
